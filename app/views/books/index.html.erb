<h1>Books#index</h1>
<p>Find me in app/views/books/index.html.erb</p>

<%= form_with model: @book do |f| %>
<h2>New book</h2>

  <div class="field">
    <label for="book_title">Title</label>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <label for="book_body">Body</label>
    <%= f.text_area :body %>
  </div>

  <div class="actions">
    <%= f.submit 'Create Book' %>
  </div>
</form>

<% end %>